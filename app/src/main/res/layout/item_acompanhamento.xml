<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Nome do produto -->
    <TextView
        android:id="@+id/textNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Produto"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Quantidade -->
    <TextView
        android:id="@+id/textQuantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x0"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/textNome"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Valor -->
    <EditText
        android:id="@+id/editValor"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:textAlignment="viewEnd"
        app:layout_constraintTop_toTopOf="@id/textQuantidade"
        app:layout_constraintStart_toEndOf="@id/textQuantidade"
        app:layout_constraintEnd_toStartOf="@id/checkComprado"/>

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/checkComprado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textQuantidade"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
